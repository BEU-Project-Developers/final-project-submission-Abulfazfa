@model PaginationVM<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Shop</h4>
                        <div class="breadcrumb__links">
                            <a href="./index.html">Home</a>
                            <span>Shop</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <!-- Shop Section Begin -->
    <section class="shop spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="shop__sidebar">
                        
                        <div class="shop__sidebar__accordion">
                            <div class="accordion" id="accordionExample">
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseOne">Categories</a>

                                    </div>
                                <span class="selectedCategoryId d-none"></span>
                                <span class="selectedMinPrice d-none"></span>
                                <span class="selectedMaxPrice d-none"></span>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__categories">
                                            <ul class="nice-scroll">
                                                @foreach (var item in ViewBag.ShopProductCategory)
                                                {
                                                    <li>


                                                            <span style="cursor:pointer" class="category-link" data-category-id="@item.Id">@item.Name</span>

                                                           
                                                    </li>
                                                }
                                            </ul>

                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="card">
                                    <div class="card-heading">
                                        <a data-toggle="collapse" data-target="#collapseThree">Filter Price</a>
                                    </div>
                                    <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                        <div class="card-body">
                                            <div class="shop__sidebar__price">
                                                <ul id="sidebarPrice">
                                                    
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="shop__product__option">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="shop__product__option__right">
                                    <p>Sort by Price:</p>
                                <select id="sortOptions">
                                    <option value="lth">Low To High</option>
                                    <option value="htl">High To Low</option>
                                </select>

                                </div>
                            </div>
                        </div>
                    </div>
                <div class="row" id="product-list-partial">
                        @Html.Partial("_ProductListPartial", Model.Items)
                        </div>
                <div class="row">
                    <nav aria-label="..." style="margin:auto;">
                        <ul class="pagination pagination-lg">
                            @for (int i = 1; i <= Model.PageCount; i++)
                            {
                                <li class="page-item @(Model.CurrentPage == i?"active": "")">
                                    <a asp-action="index" asp-route-page="@i">
                                        <span class="page-link">@i</span>
                                    </a>
                                </li>

                            }
                        </ul>
                    </nav>
                </div>
                
                
                </div>
            </div>
        </div>
    </section>
    <!-- Shop Section End -->
    <script>

    </script>
