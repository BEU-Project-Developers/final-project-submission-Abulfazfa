@model ContactVM

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="map" style="margin-top:110px">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3039.4284905030277!2d49.851370575547705!3d40.37719495804534!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d079efb5163%3A0xc20aa51a5f0b5e01!2sCode%20Academy!5e0!3m2!1saz!2saz!4v1694068415051!5m2!1saz!2saz" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <!-- Map End -->

    <!-- Contact Section Begin -->
    <section class="contact spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="contact__text">
                        <div class="section-title">
                            <span>Information</span>
                            <h2>Contact Us</h2>
                        </div>
                        <ul>
                            <li>
                                <h4>Azerbaijan/Baku</h4>
                            <p>Nizami street 203B, AF Business House, second floor, Baku 1000  <br />(+994)-12-310-01-13</p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="contact__form">
                        <form method="post" class="contactForm">
                            <div class="row">
                                <div class="col-lg-6">
                                    <input type="text" asp-for="UserName" placeholder="Name" required>
                                </div>
                                <div class="col-lg-6">
                                    <input type="text" asp-for="Email" placeholder="Email" required>
                                </div>
                                <div class="col-lg-12">
                                    <textarea asp-for="Message" placeholder="Message" required></textarea>
                                    <button type="submit" class="site-btn swalBtn">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section End -->
   
