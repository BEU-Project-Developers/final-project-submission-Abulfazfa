@model List<Blog>

@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}

<section class="breadcrumb-blog set-bg" data-setbg="https://musicindustryweekly.com/wp-content/uploads/2019/01/bz-blog-new-stock-images-1.jpg" style="margin-top: 115px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>Our Blog</h2>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic set-bg" data-setbg="/assets/img/blog/@item.ImgUrl" style="background-position: left;"></div>
                        <div class="blog__item__text">
                            <span><img src="assets/img/icon/calendar.png" alt="">@item.CreationDate.ToString("MM/dd/yyyy")</span>
                            <h5>@item.Name</h5>
                            <a asp-action="detail" asp-route-id="@item.Id">Read More</a>
                        </div>
                    </div>
                </div>
            }
            
        </div>
    </div>
</section>