@using SoundSystemShop.ViewModels
@model SliderVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card mt-5">
            <div class="card-body">
                <h4 class="card-title"></h4>



                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <img width="300px" height="200px" src="~/assets/img/hero/@Model.ImgUrl" />
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control" asp-for="Photo" id="fileInput">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Header"></label>
                        <input class="form-control" asp-for="Header" id="fileInput">
                        <span asp-validation-for="Header"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input class="form-control" asp-for="Title" id="fileInput">
                        <span asp-validation-for="Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input class="form-control" asp-for="Description" id="fileInput">
                        <span asp-validation-for="Description"></span>
                    </div>




                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" asp-controller="slider" asp-action="index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>