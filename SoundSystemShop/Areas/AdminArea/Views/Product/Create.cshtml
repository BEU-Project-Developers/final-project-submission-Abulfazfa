@model ProductVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Product</h4>
                <form method="post" class="forms-sample" enctype="multipart/form-data" multiple>
                    <div class="form-group">
                        <label asp-for="Photos"></label>
                        <input class="form-control" asp-for="Photos">
                        <span asp-validation-for="Photos"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input class="form-control" asp-for="Price">
                        <span asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc"></label>
                        <input class="form-control" asp-for="Desc">
                        <span asp-validation-for="Desc"></span>
                    </div>
                    <div class="form-group">
                                            <label asp-for="Quality"></label>
                                            <input class="form-control" asp-for="Quality">
                                            <span asp-validation-for="Quality"></span>
                                        </div>
                    <div class="form-group">
                        <label asp-for="Brand"></label>
                        <input class="form-control" asp-for="Brand">
                        <span asp-validation-for="Brand"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductCount"></label>
                        <input class="form-control" asp-for="ProductCount">
                        <span asp-validation-for="ProductCount"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="CategoryId" asp-items="@(ViewBag.Categories)">
                            <option>Please select one</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" asp-controller="product" asp-action="index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
            }

