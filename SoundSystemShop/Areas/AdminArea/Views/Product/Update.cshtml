@model ProductVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card mt-5">
            <div class="card-body">
                <h4 class="card-title"></h4>



                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    @foreach (var item in Model.Images)
                    {
                        <img src="~/assets/img/product/@item.ImgUrl" width="250" height="250" />
                        <a class="btn btn-danger" asp-action="deleteImage" ViewBag.Id asp-route-ImgUrl="@item.ImgUrl" asp-route-Id="@ViewBag.Id">X</a>
                    }
                    <div class="form-group">
                        <label asp-for="Photos"></label>
                        <input class="form-control" asp-for="Photos">
                        <span asp-validation-for="Photos"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" id="fileInput">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc"></label>
                        <input class="form-control" asp-for="Desc" id="fileInput">
                        <span asp-validation-for="Desc"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiscountPrice"></label>
                        <input class="form-control" asp-for="DiscountPrice" id="fileInput">
                        <span asp-validation-for="DiscountPrice"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price"></label>
                        <input class="form-control" asp-for="Price" id="fileInput">
                        <span asp-validation-for="Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Brand"></label>
                        <input class="form-control" asp-for="Brand" id="fileInput">
                        <span asp-validation-for="Brand"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductCount"></label>
                        <input class="form-control" asp-for="ProductCount" id="fileInput">
                        <span asp-validation-for="ProductCount"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="CategoryId" asp-items="@(ViewBag.Categories)">
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" asp-controller="product" asp-action="index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>

