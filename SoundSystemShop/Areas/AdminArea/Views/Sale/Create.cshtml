@using SoundSystemShop.ViewModels
@model SaleVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card mt-5">
            <div class="card-body">
                <h4 class="card-title">Create Sale</h4>



                <form method="post" class="forms-sample" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input class="form-control" asp-for="Photo">
                        <span asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc"></label>
                        <input class="form-control" asp-for="Desc">
                        <span asp-validation-for="Desc"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Percent"></label>
                        <input class="form-control" asp-for="Percent">
                        <span asp-validation-for="Percent"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StartDate"></label>
                        <input class="form-control" asp-for="StartDate">
                        <span asp-validation-for="StartDate"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FinishDate"></label>
                        <input class="form-control" asp-for="FinishDate">
                        <span asp-validation-for="FinishDate"></span>
                    </div>
                    <div class="form-group">
                        <select asp-for="ProductIds" asp-items="@(ViewBag.Products)">
                            <option>Please select one</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" asp-controller="sale" asp-action="index">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
            }